# Neo4j Database Configuration
# Replace with your actual Neo4j connection details
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your_neo4j_password_here
NEO4J_DATABASE=movies
NEO4J_VERSION=4

# Flask Application Configuration
# Generate a secure secret key for production
SECRET_KEY=your_secure_secret_key_change_in_production
FLASK_ENV=development
PORT=5000

# Machine Learning Configuration
# Optional: Configure ML model parameters
ML_MODEL_UPDATE_INTERVAL=3600
RECOMMENDATION_CACHE_TTL=1800
MAX_RECOMMENDATIONS=50

# Analytics Configuration
# Configure real-time tracking settings
ANALYTICS_BATCH_SIZE=100
ANALYTICS_FLUSH_INTERVAL=60
ENABLE_REAL_TIME_TRACKING=true

# Performance Configuration
# Database connection and caching settings
NEO4J_MAX_CONNECTION_POOL_SIZE=50
NEO4J_CONNECTION_TIMEOUT=30
CACHE_DEFAULT_TIMEOUT=300

# Security Configuration
# Authentication and session settings
SESSION_TIMEOUT=3600
PASSWORD_MIN_LENGTH=8
ENABLE_RATE_LIMITING=true
MAX_LOGIN_ATTEMPTS=5
